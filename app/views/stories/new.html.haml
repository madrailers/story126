- form_for(@story) do |f|
  /= f.error_messages
  %p
    = f.label :text
    %br
    - if flash[:text]
      = text_area_tag "story[text]", flash[:text], {:rows => 2, :cols => 70, :id => 'story_text'}
    - else
      = f.text_area :text, {:rows => 2, :cols => 70}
  %p
    = f.submit "Create"

= link_to 'Back', stories_path
